{{#if listado.length }}
    {{#each listado}}
        <a href="#" class="card"> 
            <article class="card__article">
                <div class="card__image-container">
                    <img class="card__image" src="{{foto}}" alt="{{nombre}}" />
                </div>
                <div class="card__content">
                    <h2 class="card__heading">{{nombre}}</h2>
                    <div class="card__description">
                    <p class="card__description-detalles">{{detalles}}</p>
                    <div class="contenedorPrecio">
                    <p class="card__description-precio">Precio: ${{precio}}</p>
                    <h3>Add</h3><button class="botonAgregar"onclick="agregarCarrito(event,'{{_id}}',this)">+</button>
                    </div>
                    </div>
                </div>
            </article>
        </a>
    {{/each}}
{{else}}
    <h2>No se encontraron productos</h2>
{{/if}}